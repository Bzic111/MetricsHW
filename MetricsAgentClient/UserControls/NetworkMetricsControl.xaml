<UserControl x:Class="MetricsAgentClient.UserControls.NetworkMetricsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetricsAgentClient.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid Height="30" Width="300">
        <Canvas>
            <Rectangle HorizontalAlignment="Left" Height="30" Stroke="Black" Fill="Gray" VerticalAlignment="Top" Width="300" Margin="0,0,0,0"/>
            <Label Height="30" Content="Network передача данных Всего" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,0,0,0"/>
            <Label x:Name="NetworkLabel" Canvas.Right="0" Height="30" Content="Label" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Top" Width="100"/>
        </Canvas>
    </Grid>
</UserControl>
